<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.11.0.xsd">

    <!-- Configure the database connection here -->
    <jdbc>
        <driver>com.mysql.jdbc.Driver</driver>
        <url>jdbc:mysql://127.0.0.1:14306/spiders?characterEncoding=utf-8&amp;useSSL=false</url>
        <user>dataway-rw</user>
        <password>QqHVMhmN*8</password>
    </jdbc>

    <generator>
        <database>
            <name>org.jooq.util.mysql.MySQLDatabase</name>
            <!--数据库名称-->
            <inputSchema>dangdang</inputSchema>
            <!--include和exclude用于控制为数据库中哪些表生成代码-->
            <includes>item_category</includes>
            <excludes>item_estimate_sales_.*</excludes>

            <!--不要Unsigned Integer-->
            <unsignedTypes>false</unsignedTypes>

            <forcedTypes>
                <forcedType>
                    <name>INTEGER</name>
                    <types>TINYINT</types>
                </forcedType>
            </forcedTypes>
        </database>

        <generate>
            <fluentSetters>true</fluentSetters>
            <instanceFields>true</instanceFields>

            <!--生成pojo和dao-->
            <pojos>true</pojos>
            <pojosToString>true</pojosToString>
            <pojosEqualsAndHashCode>true</pojosEqualsAndHashCode>
            <daos>true</daos>

            <!--不在生成的代码中添加spring注释，比如@Repository-->
            <springAnnotations>false</springAnnotations>

            <!--把数据库时间类型映射到java 8时间类型-->
            <javaTimeTypes>true</javaTimeTypes>
            <interfaces>false</interfaces>
        </generate>

        <target>
            <!--生成代码文件的包名及放置目录-->
            <packageName>com.danyl.spiders.jooq.gen.dangdang</packageName>
            <directory>src/main/java</directory>
        </target>
    </generator>
</configuration>
