<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.many2one.DepartmentMapper">

    <cache type="Ehcache"/>

    <resultMap id="dept_mapping" type="Department">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <insert id="add" keyColumn="id" keyProperty="id" useGeneratedKeys="true" parameterType="Department" flushCache="false">
        INSERT INTO dept (name) VALUES (#{name})
    </insert>

    <select id="get" parameterType="long" resultMap="dept_mapping" useCache="true">
        SELECT id,name FROM dept WHERE id=#{id}
    </select>
</mapper>